        </view>
        <!-- 右侧 商品容器 -->
        <view class="goods_info_wrap">
          <view class = " goods_name">创维（Skyworth）42X6 42英寸10核智能酷开网络平板液晶电视（黑色）</view>
          <view class="goods_price">1899</view>
        </view>
      </navigator>
    </view>
      
      
      
  </block>
  <block wx:elif ="{{tabs[1].isActive}}">1</block>
  <block wx:elif = "{{tabs[2].isActive}}">2</block>
</Tabs>
